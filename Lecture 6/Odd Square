import java.util.Scanner;	
public class Main {

	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		
		int i=1,n;
		n = scan.nextInt();
		
		while(i<=n)
		{
			int num = 2*i-1;
			int j = 1;
			while(j<=n-i+1)
			{
				System.out.print(num);
				num = num + 2;
				j++;
			}
			int num2 = 1;
			j=1;
			while(j<=i-1)
			{
				System.out.print(num2);
				num2=num2+2;
				j++;
			}
			System.out.println();
			i++;
		}
	}
}
